
<%- include ../partials/header.ejs %>

<!---Content for the Add page-->


<div class="container">
    <div class="row">
      <div class="col-md-offset-3 col-md-6">
        <h1><%= title %></h1>
          <form class="form" method="post">
            <div class="form-group">
              <label for="titleTextField">Title</label>
              <input type="text" class="form-control" id="titleTextField"
              placeholder="Book Name" name="title"  required>
            </div>

            <div class="form-group">
              <label for="descriptionTextArea">Description</label>
              <textarea type="text" class="form-control" id="descriptionTextArea"
              placeholder="Book Description" name="description"  required></textarea>
            </div>

            <div class="form-group">
              <label for="priceTextField">Price</label>
              <input type="text" class="form-control" id="priceTextField"
              placeholder="Book Price" name="price"  required>
            </div>
            <div class="form-group">
              <label for="authorTextField">Author</label>
              <input type="text" class="form-control" id="authorTextField"
              placeholder="Book Author" name="author" required>
            </div>
            <div class="form-group">
              <label for="genreTextField">Genre</label>
              <input type="text" class="form-control" id="genreTextField"
              placeholder="Book Genre" name="genre" required>
            </div>
            <br>

            <button type="submit" class="btn btn-primary">
              <i class="fa fa-edit"></i> Submit</button>

            <a href="/books" class="btn btn-warning">
              <i class="fa fa-undo"></i> Cancel</a>
          </form>
      </div>
    </div>
  </div>


<%- include ../partials/footer.ejs %>